@model IEnumerable<Accessory>

@{
    ViewData["Title"] = "Accessories";
}


<section id="header2">
    <div class="row head-img">
        <h1>Accessories</h1>
        <span>Share Your Feedback With Us</span>
    </div>
</section>

<section id="products">
    <div class="container">
        <div class="row my-5">
            <div class="col-lg-3 col-md-6 col-sm-12 my-3">
                <div class="search">
                    <input class="myInput" type="text" placeholder="Search Products" />
                </div>

                <div class="categories">
                    <h5>Categories</h5>
                    <div class="searchInline">
                        <input class="myInput" type="text" placeholder="Search Products" />
                    </div>
                    <div>
                        <input type="checkbox" />
                        <label>Insignia</label> <span class="price">733</span>
                    </div>
                    <div>
                        <input type="checkbox" />
                        <label>Samsung</label> <span class="price">585</span>
                    </div>
                    <div>
                        <input type="checkbox" />
                        <label>HP</label> <span class="price">455</span>
                    </div>
                    <div>
                        <input type="checkbox" />
                        <label>Metra</label> <span class="price">450</span>
                    </div>
                    <div>
                        <input type="checkbox" />
                        <label>Apple</label> <span class="price">392</span>
                    </div>
                </div>

                <div class="categories">
                    <h5>Type</h5>
                    <div>
                        <input type="checkbox" />
                        <label>Trend cases</label> <span class="price">452</span>
                    </div>
                    <div>
                        <input type="checkbox" />
                        <label>Ult protection cases</label> <span class="price">393</span>
                    </div>
                    <div>
                        <input type="checkbox" />
                        <label>Ink cartridges</label> <span class="price">213</span>
                    </div>
                    <div>
                        <input type="checkbox" />
                        <label>Business cases</label> <span class="price">203</span>
                    </div>
                    <div>
                        <input type="checkbox" />
                        <label>Connectivity</label> <span class="price">179</span>
                    </div>
                </div>

                <div class="categories">
                    <h5>Category</h5>
                    <div class="searchInline">
                        <input class="myInput" type="text" placeholder="Search Products" />
                    </div>
                    <div>
                        <input type="checkbox" />
                        <label>Appliances</label> <span class="price">3,722</span>
                    </div>
                    <div>
                        <input type="checkbox" />
                        <label>Computers & Tablets</label> <span class="price">2,919</span>
                    </div>
                    <div>
                        <input type="checkbox" />
                        <label>Cell Phones</label> <span class="price">2,876</span>
                    </div>
                    <div>
                        <input type="checkbox" />
                        <label>Cell Phone Accessories</label> <span class="price">2,470</span>
                    </div>
                    <div>
                        <input type="checkbox" />
                        <label>Audio</label> <span class="price">1,364</span>
                    </div>
                </div>

                <div class="categoriesSecond">
                    <h5>Price</h5>
                    <div>
                        <input type="radio" name="types" />
                        <label>Below $10</label>
                    </div>
                    <div>
                        <input type="radio" name="types" />
                        <label>$10 - $100</label>
                    </div>
                    <div>
                        <input type="radio" name="types" />
                        <label>$100 - $500</label>
                    </div>
                    <div>
                        <input type="radio" name="types" />
                        <label>Above $500</label>
                    </div>
                    <div>
                        <input type="radio" name="types" />
                        <label>All</label>
                    </div>
                    <h5>Enter Price Range</h5>
                    <div class="digit">
                        <input class="num" type="number" min="1" max="7000" value="1" />
                        <span> - </span>
                        <input class="num" type="number" min="1" max="7000" value="5000" />
                        <button class="go"><span>Go</span></button>
                    </div>
                </div>

                <div class="categoriesSecond">
                    <h5>Rating Menu</h5>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <span class="price">2150</span><br /><br />
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <span class="price">16074</span><br /><br />
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <span class="price">17696</span><br /><br />
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <span class="price">17890</span><br /><br />
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <span class="price">18046</span><br /><br />
                </div>

                <div class="categories" style=" height: 82.8px">
                    <button class="clearPart"><span>Clear all filters</span></button>
                </div>




            </div>

            <div class="col-lg-9 col-md-6 col-sm-12 my-3">
                <div class="product-head">
                    <select name="cars" id="opts">
                        <option value="volvo">Featured</option>
                        <option value="saab">Lowest Price</option>
                        <option value="opel">Highest Price</option>
                    </select>

                    <span>18,046 results found in 5ms</span>
                </div>

                <div class="row" id="parent-products">
                    <input type="hidden" id="product-count" value="@ViewBag.count" />
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-12 col-sm-12">
                            <div class="productFirst">
                                <i class="fa-solid fa-heart"></i>
                                <img src="~/assets/img/img-Accessories/@item.Image" alt="" />
                            </div>
                            <div class="productFirstInfo">
                                <a href="">
                                    <h5>@item.Name</h5>
                                </a>
                                <div class="shop-icon">
                                    <i class="fa-solid fa-cart-shopping"></i>
                                </div>
                                <span>@item.Price</span>
                                <div class="star-icon">
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star-half-stroke"></i>
                                    <i class="fa-regular fa-star"></i>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="show-more d-flex justify-content-center my-2 mb-2 w-100">
                        <button class="btn btn-primary">Show more ...</button>
                    </div>

                </div>
                <div class="row my-3">
                    <div class="posination">
                        <i class="fa-solid fa-angles-left"></i>
                        <i class="fa-solid fa-angle-left"></i>
                        <span class="first">1</span>
                        <span>2</span>
                        <span>3</span>
                        <span>4</span>
                        <span>5</span>
                        <i class="fa-solid fa-chevron-right"></i>
                        <i class="fa-solid fa-angles-right"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <link rel="stylesheet" href="~/assets/css/accessories/accessories.css">
}


@section ScriptsJs {
    <script src="~/assets/js/accessories.js"></script>
}
